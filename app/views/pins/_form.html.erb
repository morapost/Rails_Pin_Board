<%= simple_form_for(@pin, html: { class: 'form-horizontal' }) do |f| %>
	<div class="form-inputs col-md-6 col-md-offset-3">
		<%= f.input :title, required: true %>
		<%= f.input :description, hint: 'Write the detailed description about the pin' %>
	</div>
	<div class="form-actions col-md-6 col-md-offset-3">
    	<%= f.button :submit, class: 'btn btn-primary' %>
    	<%= link_to "Back", root_path, class: 'btn btn-warning' %>
  	</div>
<% end %>
<br>
