<%= simple_form_for(@pin, html: { multipart: true }) do |f| %>
	<div class="form-inputs form-group">
		<%= f.input :title, required: true, input_html: {class: 'form-control'} %>
		<%= f.input :description, hint: 'Write the detailed description about the pin', input_html: {class: 'form-control'} %>
		<%= f.input :image, input_html: {class: 'form-control'} %>
	</div>
	<div class="form-actions">
		<div class="pull-left">
    	<%= f.button :submit, class: 'btn btn-primary' %>
    	</div>
    	<div class="pull-right">
    		<%= link_to "Back", root_path, class: 'btn btn-warning' %>
    	</div>	
  	</div>
<% end %>
<br>
