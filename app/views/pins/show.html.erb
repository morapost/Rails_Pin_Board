<div id="pin_show" class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default">
			<div class="panel-heading pin_image">
				<%= image_tag @pin.image.url %>
			</div>
			<div class="panel-body">
				<h1><%= @pin.title %></h1><br/>
				<p class="description"><%= @pin.description %></p>
			</div>
			<div class="panel-footer">
				<div class="row">
					<div class="col-md-6">
						<p class="user">submitted by <%= @pin.user.email %></p>
					</div>
					<div class="col-md-6">
						<div class="btn-group pull-right">
							<%= link_to like_pin_path(@pin), method: :put, class: "btn btn-default" do %>
								<span class="glyphicon glyphicon-heart"></span>
								<%= @pin.get_upvotes.size %>
							<% end %>
							<% if @pin.user == current_user %>
								<%= link_to "Edit", edit_pin_path %> | <%= link_to "destroy", pin_path, method: :delete, data: {confirm: 'Are you sure?'}  %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>	
</div>


