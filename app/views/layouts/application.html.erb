<!DOCTYPE html>
<html>
<head>
  <title>PinBoard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Arvo:400,700' rel='stylesheet' type='text/css'>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class='navbar navbar-default navbar-fixed-top' role='navigation'>
  <div class='container'>
    <div class='navbar-header'>
      <a class='navbar-brand' href='/'>PinBoard</a>
    </div>
    <ul class='nav navbar-nav navbar-right'>
    <% if user_signed_in? %>	
      <li>
        <%= link_to new_pin_path, class: 'btn btn-primary' do %>
        	<span class="glyphicon glyphicon-plus"></span>
        	  New Pin
        <% end %>        
      </li>
      <li>
      	<%= link_to destroy_user_session_path,method: :delete, class: 'btn btn-primary' do %>
      		<span class="glyphicon glyphicon-off"></span>
      		Log Out
      	<% end %>	
      </li>
    <% else %>
    	<li>
    	  <%= link_to new_user_session_path, class: 'btn btn-primary' do %>
    	  	<span class="glyphicon glyphicon-arrow-right"></span>
    	  	  Sign In
    	  <% end %>        
    	</li>
    	<li>
    		<%= link_to new_user_registration_path, class: 'btn btn-primary' do %>
    			<span class="glyphicon glyphicon-arrow-up"></span>
    			Sign Up
    		<% end %>
    	</li>	
    <% end %> 
    </ul>
  </div>
</nav>
<div class="container">
	<% if notice %>
	  <p id="notice" class="alert alert-success">
	    <%= notice %>
	  </p>
	<% end %>

	<p class="alert"><%= alert %></p>
	
		<%= yield %>
	
</div>
<footer>
  <div class='container'>
    PinBoard Pvt Ltd.,India
  </div>
</footer>
</body>
</html>
